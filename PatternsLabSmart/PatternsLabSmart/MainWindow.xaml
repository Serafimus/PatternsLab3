        <Button x:Name="ButtonVolumeDown" Content="Громкость -" HorizontalAlignment="Left" Margin="175,181,0,0" VerticalAlignment="Top" Width="73" Click="ButtonVolumeDown_Click"/>
        <Label x:Name="LabelStateNow" Content="Label" HorizontalAlignment="Left" Margin="71,222,0,0" VerticalAlignment="Top" Height="139" Width="221" FontSize="30"/>
        <Image HorizontalAlignment="Left" Height="443" Margin="253,0,0,0" VerticalAlignment="Top" Width="354" Source="Images/Smartphone.png"/>
    </Grid>
</Window>
